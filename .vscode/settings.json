{
    "files.exclude": {
        "node_modules/": true
    },
    "eslint.enable": true,
	"eslint.lintTask.enable": true,
    "editor.tabSize": 2,
    "eslint.autoFixOnSave": true,
    "files.associations": {
        "Dockerfile*": "dockerfile",
        "Jenkinsfile*": "groovy"
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    }
}