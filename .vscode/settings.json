{
    "files.exclude": {
        "node_modules/": true
    },
    "eslint.enable": true,
	"eslint.lintTask.enable": true,
    "editor.tabSize": 4,
    "files.associations": {
        "Dockerfile*": "dockerfile",
        "Jenkinsfile*": "groovy"
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
	"eslint.validate": [
		"javascript",
        "typescript"
	],
	"editor.insertSpaces": true,
	"editor.detectIndentation": false
}
