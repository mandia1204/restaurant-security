FROM node:7.8.0

WORKDIR /var/www

# Install app dependencies
COPY ./src/package.json /var/www

RUN npm install --production

COPY ./src/ /var/www

RUN npm run build

RUN rm -r routes services models auth db
RUN rm server.js startMessage.js testSetup.js index.html

EXPOSE 3001
CMD [ "npm", "run", "serve" ]
